        <Grid x:Name="MainArea" Grid.Row="1" PreviewMouseLeftButtonDown="MainArea_PreviewMouseLeftButtonDown">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Canvas x:Name="ScoreCanvas" MinWidth="1440" Background="White" Margin="30" VerticalAlignment="Top"/>
            </ScrollViewer>
        </Grid>

        <Viewbox x:Name="PianoKeyboard_Viewbox" Grid.Row="2" Stretch="Fill">
            <local:PianoKeyboard x:Name="PianoKeyboard"/>
        </Viewbox>
    </Grid>
